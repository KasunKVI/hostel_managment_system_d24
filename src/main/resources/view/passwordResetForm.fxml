    <children>
        <Label layoutX="23.0" layoutY="36.0" prefHeight="55.0" prefWidth="296.0" text="Change Password" textFill="#fffdfd">
            <font>
                <Font name="DejaVu Sans Bold" size="28.0" />
            </font>
        </Label>
        <TextField fx:id="txtOldPass" layoutX="35.0" layoutY="222.0" onAction="#isPasswordCorrect" onKeyReleased="#checkPassOld" prefHeight="47.0" prefWidth="377.0" promptText="Old Password" styleClass="txt1">
            <font>
                <Font name="DejaVu Serif Bold" size="13.0" />
            </font>
        </TextField>
        <TextField fx:id="txtNewPass" layoutX="35.0" layoutY="329.0" onAction="#addPass2focus" onKeyReleased="#checkPassNew" prefHeight="47.0" prefWidth="377.0" promptText="New Password" styleClass="txt1">
            <font>
                <Font name="DejaVu Serif Bold" size="13.0" />
            </font>
        </TextField>
        <TextField fx:id="txtNewPass1" layoutX="38.0" layoutY="438.0" onAction="#donePass" onKeyReleased="#checkPassNew1" prefHeight="47.0" prefWidth="377.0" promptText="Reenter New Password" styleClass="txt1">
