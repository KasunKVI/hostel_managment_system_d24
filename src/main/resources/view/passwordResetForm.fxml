                <Font name="Comic Sans MS Bold" size="16.0" />
            </font>
        </Button>
        <Button fx:id="btnClose1" layoutX="87.0" layoutY="594.0" mnemonicParsing="false" onAction="#closePasswordForm" prefHeight="47.0" prefWidth="131.0" styleClass="close_btn" text="Close">
            <font>
                <Font name="Comic Sans MS Bold" size="16.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
