<AnchorPane fx:id="forget_password_page" prefHeight="400.0" prefWidth="336.0" styleClass="background" stylesheets="@../css/forget_password_d24.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.LogInFormController">
    <children>
        <Label fx:id="headLabel" layoutX="24.0" layoutY="63.0" prefHeight="74.0" prefWidth="285.0" text="Please input your user name here" textFill="#22282b">
            <font>
                <Font name="Open Sans Extrabold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="txtInput" layoutX="38.0" layoutY="149.0" onKeyReleased="#checkUserNameValidity" prefHeight="42.0" prefWidth="257.0" promptText="User Name" styleClass="text_field">
            <font>
                <Font name="Nakula" size="16.0" />
            </font>
        </TextField>
      <ImageView fx:id="imgCorrect" fitHeight="36.0" fitWidth="55.0" layoutX="223.0" layoutY="304.0" pickOnBounds="true" preserveRatio="true" />
        <Button fx:id="btnNext" layoutX="208.0" layoutY="301.0" mnemonicParsing="false" onAction="#go_to_next_page" prefHeight="42.0" prefWidth="85.0" styleClass="btn" text="Next">
